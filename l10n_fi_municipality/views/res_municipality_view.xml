<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record model="ir.ui.view" id="municipalities_form">
        <field name="name">municipalities.form</field>
        <field name="model">res.municipality</field>
        <field name="arch" type="xml">
            <form string="municipalities">
                <group>
                  <field name="code"/>
                  <field name="name"/>
                  <field name="municipality_form"/>
                  <field name="state_id"/>
                  <field name="state_code"/>
                </group>
            </form>
        </field>
    </record>

  <record model="ir.ui.view" id="municipalities_tree">
      <field name="name">municipalities.tree</field>
      <field name="model">res.municipality</field>
      <field name="arch" type="xml">
        <tree string="municipalities">
          <field name="code"/>
          <field name="name"/>
          <field name="municipality_form"/>
          <field name="state_id"/>
          <field name="state_code"/>
      </tree>
      </field>
  </record>

</odoo>
